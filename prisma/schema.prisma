generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Ticket {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  phase       String @default("CREATED")
  boardId     Int
  board       Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model Board {
  id      Int      @id @default(autoincrement())
  title   String
  tickets Ticket[]

  createdAt DateTime @default(now())
}
